<div class="timeline-container center top-circle">
  <% if @grouped_spots.length > 0 %>
    <section class="timeline">
      <%= render partial: 'spots/spots', locals: {grouped_spots: @grouped_spots} %>
    </section>
  <% else %>
    <div class="no-content">
      <h3>No spots</h3>
    </div>
  <% end %>
</div>
