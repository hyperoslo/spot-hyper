<% grouped_spots.each do |date, spots| %>
  <div class="timespan" id="<%= display_day(date) %>">
    <div class="span">
      <h3><%=  local_relative_time(date, 'weekday') %></h3>
    </div>
    <% cache([@spot, params[:name], params[:tag]]) do %>
      <%= render partial: 'spots/spot', collection: spots %>
    <% end %>
  </div>
<% end %>
