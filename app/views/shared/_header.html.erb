<div class="header">
  <div class="container-fluid relative">
    <div class="logo">
      <%= link_to(root_path) do %>
        <div class="brand">
          <%= image_tag('hyper_logo.svg') %>
        </div>
      <% end %>
    </div>
    <div class="brand-description">
      <h3><%= @description %></h3>
    </div>
    <div class="filters">
      <%= content_tag :ul do %>
        <%= content_tag :li do %>
          <%= link_to('All', root_path,
              class: "#{current_page?(root_path) ? 'active' : ''}")
          %>
        <% end %>
        <%= content_tag :li do %>
          <%= link_to('Hangouts', hangouts_path,
            class: "#{current_page?(hangouts_path) ? 'active' : ''}")
          %>
        <% end %>
        <%= content_tag :li do %>
          <%= link_to('Remote', spots_path(tag: 'remote'),
            class: "#{current_page?(spots_path(tag: 'remote')) ? 'active' : ''}")
          %>
        <% end %>
       <%= content_tag :li do %>
         <%= link_to('Sick', spots_path(tag: 'sick'),
           class: "#{current_page?(spots_path(tag: 'sick')) ? 'active' : ''}")
         %>
       <% end %>
      <% end %>
    </div>
  </div>
</div>
